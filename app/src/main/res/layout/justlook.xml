<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/image_userImage"
                    android:src="@drawable/ic_profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/image_userImage"
                    android:text="김푸다"
                    android:id="@+id/text_userName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    app:layout_constraintStart_toEndOf="@id/image_userImage"
                    app:layout_constraintTop_toBottomOf="@id/text_userName"
                    android:id="@+id/text_userID"/>

                <TextView
                    android:id="@+id/text_following"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/text_follower"
                    android:text="팔로잉"/>

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:id="@+id/number_following"
                    app:layout_constraintTop_toBottomOf="@id/text_following"
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/number_follower"
                    android:layout_height="wrap_content"
                    android:text="14"/>

                <TextView
                    android:id="@+id/text_follower"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:text="팔로워"/>

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:id="@+id/number_follower"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/goLastReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘 하루의 총평" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 모아보기" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜별 아카이브" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="환경설정" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="고객센터" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>